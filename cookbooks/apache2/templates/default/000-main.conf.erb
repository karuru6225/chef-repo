<VirtualHost *:80>
	ServerAdmin webmaster@localhost

	DocumentRoot <%= @serverroot %>
	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>
	<Directory  <%= @serverroot %>>
		Options FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>
</VirtualHost>

